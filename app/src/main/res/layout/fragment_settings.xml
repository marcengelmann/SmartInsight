<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="de.tum.mw.ftm.praktikum.smartinsight.SettingsFragment">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="0"
                android:layout_column="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Studio"
                android:id="@+id/profileName"
                android:layout_row="0"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="1"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sitznummer:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="3"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/profileSitzNumb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrikelnummer:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="2"
                android:layout_column="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilMatrikel"
                android:layout_row="2"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktuelle PrÃ¼fung:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="5"
                android:layout_column="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilExam"
                android:layout_row="5"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profilfoto:"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_row="4"
                android:layout_column="0"/>
            <de.tum.mw.ftm.praktikum.smartinsight.CircularImageView
                android:id="@+id/profileImage"
                android:src="@mipmap/ic_launcher_fernrohr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:siBorderWidth="4dp"
                app:siBorderAlpha="0.5"
                app:siBorderColor="#000000"
                android:alpha="1"
                android:layout_row="4"
                android:layout_column="1"/>

        </GridLayout>




</FrameLayout>
